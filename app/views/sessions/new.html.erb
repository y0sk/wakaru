<div class="head">
<h1>wakaru</h1>
<h3>wakaru にログイン</h3>
</div>

<div class="login">
<%= form_for(:session, url: login_path) do |f| %>
     <div class="form-group">
        <%= f.label :email, 'Email' %><br>
        <%= f.email_field :email %>
      </div>
       <div class="form-group">
        <%= f.label :password, 'Password' %><br>
        <%= f.password_field :password %>
      </div>
      <div class="submit">
      <%= f.submit 'ログイン' %>
      </div>
<% end %>
</div>

<div class="signup_path">
<p><%= link_to '新規登録', signup_path %></p>
</div>